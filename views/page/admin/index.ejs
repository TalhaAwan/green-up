



<!DOCTYPE html>
<html lang="en">

<? include ../../partials/head ?>
<body>


    <? include ../../partials/admin/header ?>

    <!-- Page Content -->
    <div class="container">

        <!-- Page Heading/Breadcrumbs -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Pages
                </h1>

            </div>
        </div>
        <!-- /.row -->

        <!-- Projects Row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="statusMessage" style="color: red">
                    <?= errorMessage ?>
                </div>
                <div class="statusMessage" style="color: green">
                    <?= successMessage ?>
                </div>
                <div >

                    <table>
                        <tr>
                            <th> Sr No.</th>
                            <th> Slug </th>
                            <th> Title</th>
                            <th> Statement</th>

                            <th> Actions</th>
                        </tr>
                        <? pages.forEach(function(page, index) { ?>


                        <tr>
                            <td><?= (index + 1)?></td>
                            <td><?= page.slug?></td>
                            <td><?= page.title ?></td>
                            <td><?- page.statement?></td>
                            <td>
                                <a href="/admin/pages/<?= page.slug ?>">show</a>
                                <a href="/admin/pages/edit/<?= page._id ?>">edit</a>
                                <a href="javascript:void(0)" onClick="deletePage('<?= page._id ?>')">delete</a>
                            </td>
                        </tr>

                        <? }); ?>
                    </table>

                </div>
            </div>
        </div>
        <!-- /.row -->


    </div>
    <!-- /.container -->

    <? include ../../partials/footer ?>

</body>
<script>
    function deletePage(id){
        var myForm = document.createElement("form");
        myForm.action='/admin/pages/'+id+'?_method=DELETE';
        myForm.method="POST";
        myForm.submit();
    }

    $(document).ready(function(){
        setTimeout(function(){
            $(".statusMessage").hide("slow")
        }, 5000)

    })

</script>

<style>
    table {
        width: 100%;
        border: 1px solid black;
    }

    th, td {
        border: 1px solid black;
        padding: 10px;
    }
</style>
</html>
